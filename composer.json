{
  "name": "badams/microsoft-translator",
  "type": "library",
  "description" : "PHP implementation of Microsoft's Translator API",
  "keywords": ["translator", "api", "microsoft"],
  "license": "MIT",
  "homepage" : "https://github.com/badams/microsoft-translator",
  "authors": [
    {
      "name": "Byron Adams",
      "email": "byron.adams54@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/badams/microsoft-translator/issues"
  },
  "require": {
    "guzzlehttp/guzzle": "~5.0|~4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.2.0",
    "fabpot/php-cs-fixer": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "badams\\MicrosoftTranslator\\": "src/",
      "badams\\MicrosoftTranslator\\tests\\" : "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --coverage-text --coverage-html=build;",
    "php-cs-fixer" : "./vendor/bin/php-cs-fixer fix ."
  }
}
